<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrarUsuario">

    <TextView
            android:text="Registrar Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textNombre" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="83dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textNombre"
            android:hint="Nombre"
            app:layout_constraintBottom_toTopOf="@+id/textApellido" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" android:layout_marginEnd="103dp"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="25dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textApellido"
            android:hint="Apellido"
            app:layout_constraintBottom_toTopOf="@+id/textDireccion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" android:layout_marginEnd="103dp"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textNombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textDireccion"
            android:hint="Dirección" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            android:layout_marginEnd="103dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textCorreo"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textApellido" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textCorreo"
            android:hint="Correo" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintBottom_toTopOf="@+id/textTelefono"
            android:layout_marginEnd="103dp" app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textDireccion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textTelefono"
            android:hint="Teléfono" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintBottom_toTopOf="@+id/textPosicion"
            android:layout_marginEnd="103dp" app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textCorreo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textPosicion"
            android:hint="Posición"
            app:layout_constraintBottom_toTopOf="@+id/textFecha" android:layout_marginEnd="103dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textTelefono" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textFecha"
            android:hint="Fecha de inicio" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"
            app:layout_constraintBottom_toTopOf="@+id/textUsuario" android:layout_marginEnd="103dp"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textPosicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textUsuario"
            android:hint="Nombre de usuario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" android:layout_marginEnd="103dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textPassword" tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textFecha" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="215dp"
            android:layout_height="38dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/textPassword"
            android:hint="Contraseña" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:layout_marginEnd="101dp" app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/textUsuario"/>
    <Button
            android:text="Registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnRegistrarse"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="137dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="138dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRadioRol"/>
    <RadioGroup
            android:layout_width="118dp" android:layout_height="102dp"
            android:id="@+id/editRadioRol"
            android:layout_marginEnd="118dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="141dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/btnRegistrarse"
            app:layout_constraintTop_toBottomOf="@+id/textPassword">
        <RadioButton
                android:text="standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonEstandar"
        />
        <RadioButton
                android:text="administrador"
                android:layout_width="144dp"
                android:layout_height="wrap_content" android:id="@+id/radioButtonAdmin"
        />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>