<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CambiarPassword">

    <TextView
            android:text="Cambiar Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:textSize="30sp" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/textUsu" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" android:layout_marginEnd="68dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textUsu"
            android:hint="Nombre de usuario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="103dp" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/textPassA" android:layout_marginEnd="98dp"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="TouchTargetSizeCheck"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/textPassA"
            android:hint="Contraseña actual" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" android:layout_marginEnd="103dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/textPassN" tools:ignore="TouchTargetSizeCheck"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/textPassN"
            android:hint="Nueva Contraseña" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:layout_marginEnd="105dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="71dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCambiar" tools:ignore="TouchTargetSizeCheck"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnCambiar"
            app:backgroundTint="#9A2219" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp" android:layout_marginEnd="154dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>